<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="colorAccent">@color/light_colorAccent</item>
        <item name="bottomNavBg">@color/light_bottomNavBg</item>
        <item name="bottomNavActive">@color/light_bottomNavActive</item>
        <item name="bottomNavInactive">@color/light_bottomNavInactive</item>
        <item name="listItemCardTextColor">@color/light_listItemCardTextColor</item>
        <item name="listItemBgColor">@color/light_listItemBgColor</item>
        <item name="themeName">@string/theme_name_light</item>
        <item name="drawableDate">@drawable/ic_date_white</item>
        <item name="drawablePopular">@drawable/ic_popular_white</item>
        <item name="drawableRating">@drawable/ic_top_rated_white</item>
    </style>

    <!-- Dark theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="bottomNavBg">@color/dark_bottomNavBg</item>
        <item name="bottomNavActive">@color/dark_bottomNavActive</item>
        <item name="bottomNavInactive">@color/dark_bottomNavInactive</item>
        <item name="listItemCardTextColor">@color/dark_listItemCardTextColor</item>
        <item name="listItemBgColor">@color/dark_listItemBgColor</item>
        <item name="themeName">@string/theme_name_dark</item>
        <item name="drawableDate">@drawable/ic_date_teal_accent</item>
        <item name="drawablePopular">@drawable/ic_popular_teal_accent</item>
        <item name="drawableRating">@drawable/ic_top_rated_teal_accent</item>
    </style>

</resources>
